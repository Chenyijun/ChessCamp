<div class = "transparent">
<div class="row">
  <div class="small-7 columns">
    <!-- MAIN CONTENT GOES HERE -->
    <%= render :partial => "camps", locals: { status: "Upcoming", camps: @upcoming_camps } %>
    <p>&nbsp;</p>
    <% if logged_in? %>
      <% if @past_camps.nil? %>
        <%= render :partial => "camps", locals: { status: "Past", camps: @past_camps } %>
      <% end %>
    <br />
    <% if logged_in? %>
      <% if current_user.role == 'admin' %>
       <%= link_to "Add a new camp", new_camp_path, class: "button tiny radius" %>
      <% end %>
    <% end %>
    <% end %>
  </div>
  <% if logged_in? %>
  <div class="small-1 columns">
    &nbsp;
  </div>

  <div class="small-4 columns">
    <!-- SIDEBAR CONTENT GOES HERE -->
    <%= render :partial => "inactive_camps" %>
  </div>
  <% end %>
</div>
</div>